<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">
            #F4B607
        </item>

        <item name="postSplashScreenTheme">
            @style/Theme.MyApp
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

    </style>
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme.App.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Enable fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <!-- Make status and navigation bar translucent -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Ensure no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>